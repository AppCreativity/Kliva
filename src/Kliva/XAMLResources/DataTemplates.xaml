                    <Run Text="{x:Bind DistanceFormatted, Mode=OneWay}" />
                    <Run Text="{x:Bind DistanceUnit, Mode=OneWay, Converter={StaticResource DistanceUnitToStringConverter}}"/>
                </TextBlock>
            </RelativePanel>
        </UserControl>
    </DataTemplate>


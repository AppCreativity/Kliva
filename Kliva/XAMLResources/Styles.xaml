<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kliva.XAMLResources">

    <Color x:Key="KlivaMainColor">#df8942</Color>
    <SolidColorBrush x:Key="KlivaMainBrush" Color="{StaticResource KlivaMainColor}" />

    <Color x:Key="KlivaDarkColor">#b65033</Color>
    <SolidColorBrush x:Key="KlivaDarkBrush" Color="{StaticResource KlivaDarkColor}" />

    <FontFamily x:Key="OpenSansFontLight">/Assets/Fonts/OpenSans-Light.ttf#Open Sans</FontFamily>
    <FontFamily x:Key="OpenSansFontBold">/Assets/Fonts/OpenSans-Bold.ttf#Open Sans</FontFamily>
    <FontFamily x:Key="OpenSansFontSemibold">/Assets/Fonts/OpenSans-Semibold.ttf#Open Sans</FontFamily>

    <Style x:Name="KlivaButton"
           TargetType="Button">
        <Setter Property="Background" Value="{StaticResource KlivaDarkBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="{StaticResource OpenSansFontLight}" />
        <Setter Property="FontSize" Value="22" />
    </Style>

</ResourceDictionary>
